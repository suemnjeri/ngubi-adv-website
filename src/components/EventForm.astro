---
// This component is a reusable form for free event registrations.
---
<div class="bg-surface p-8 rounded-lg shadow-lg max-w-2xl mx-auto">
  <h3 class="text-3xl font-bold mb-6 text-center text-accent">Register for Event</h3>
  <form action="/thank-you" method="GET" class="space-y-6">
    {/* First Row: Name and Email */}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="space-y-2">
        <label for="name" class="block text-foreground-light-bg text-sm font-medium">Full Name <span class="text-red-500">*</span></label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          required 
          placeholder="Your Full Name"
          class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent-dark transition-colors duration-200"
        />
      </div>
      <div class="space-y-2">
        <label for="email" class="block text-foreground-light-bg text-sm font-medium">Email Address <span class="text-red-500"></span></label>
        <input 
          type="email" 
          id="email" 
          name="email" 
         
          placeholder="your.email@example.com"
          class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent-dark transition-colors duration-200"
        />
      </div>
    </div>

    {/* Second Row: Phone and Number of Guests */}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="space-y-2">
        <label for="phone" class="block text-foreground-light-bg text-sm font-medium">Phone Number <span class="text-red-500">*</span></label>
        <input 
          type="tel" 
          id="phone" 
          name="phone" 
          required 
          placeholder="+254 7XX XXX XXX"
          class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent-dark transition-colors duration-200"
        />
      </div>
      <div class="space-y-2">
        <label for="guests" class="block text-foreground-light-bg text-sm font-medium">Number of People <span class="text-red-500">*</span></label>
        <input 
          type="number" 
          id="guests" 
          name="guests" 
          value="1" 
          min="1" 
          max="10" 
          required 
          class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent-dark transition-colors duration-200"
        />
      </div>
    </div>

    {/* Third Row: Additional Notes */}
    <div class="space-y-2">
      <label for="notes" class="block text-foreground-light-bg text-sm font-medium">Additional Notes / Comments</label>
      <textarea 
        id="notes" 
        name="notes" 
        rows="4" 
        placeholder="Any special requests or comments?"
        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent-dark transition-colors duration-200"
      ></textarea>
    </div>

    {/* Submit Button */}
    <button 
      type="submit" 
      class="w-full px-6 py-3 text-lg bg-accent text-white rounded-full font-semibold whitespace-nowrap hover:bg-accent-dark transition-colors duration-200 shadow-md"
    >
      Complete Registration
    </button>
  </form>
</div>