---
export interface Props {
  id?: string;
  href: string;
  class?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;

  // ADD THESE NEW PROPS
  target?: string; 
  rel?: string; 
}

const {
  id,
  href,
  class: className = "",
  ariaLabel,
  title,
  disabled = false,

  // DESTRUCTURE THE NEW PROPS
  target,
  rel,
} = Astro.props;
---

{
  disabled ? (
    <span
      id={id}
      class:list={["group inline-block", className]}
      title={title}
      aria-disabled={disabled}
    >
      <slot />
    </span>
  ) : (
    <a
      id={id}
      href={href}
      class:list={["group inline-block hover:text-accent", className]}
      aria-label={ariaLabel}
      title={title}

      {target}  
      {rel}     
    >
      <slot />
    </a>
  )
}
